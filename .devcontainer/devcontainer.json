{
	"name": "poetry3-poetry-pyenv",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		5002
	],
	"postCreateCommand": "eval $(poetry env activate)",
	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring",
				"tamasfe.even-better-toml",
				"seatonjiang.gitmoji-vscode",
				"charliermarsh.ruff",
				"mhutchie.git-graph"
			],
			"settings": {
				"python.defaultInterpreterPath": "/workspaces/GuardianAngel/backend/.venv",
				"python.analysis.extraPaths": [
					"./backend"
				],
				"[python]": {
					"editor.formatOnSave": true,
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.codeActionsOnSave": {
						"source.fixAll": "explicit", // fixes all ruff linting errors
						"source.organizeImports": "explicit" // then organizes imports
					}
				}
			}
		}
	}
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}